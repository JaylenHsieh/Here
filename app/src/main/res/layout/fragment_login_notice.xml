            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/singer_play_now" />

        <TextView
            android:id="@+id/tv_reason_need_permission"
