<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_leaverequest_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="请假"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_leaverequest_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="    尊敬的某某某老师您好！本人因身体腹部不适，需要去医院检查，特此请半天假，望批准！"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_leaverequest_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_leaverequest_type" />

    <TextView
        android:id="@+id/tv_leaverequest_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="状态："
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_leaverequest_reason"
        app:layout_constraintTop_toBottomOf="@+id/tv_leaverequest_reason" />

    <TextView
        android:id="@+id/tv_leaverequest_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="批准"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_leaverequest_state_title"
        app:layout_constraintStart_toEndOf="@+id/tv_leaverequest_state_title"
        app:layout_constraintTop_toTopOf="@+id/tv_leaverequest_state_title" />

    <TextView
        android:id="@+id/tv_leaverequest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018年03月26日"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_leaverequest_state"
        app:layout_constraintEnd_toEndOf="@+id/tv_leaverequest_reason"
        app:layout_constraintTop_toTopOf="@+id/tv_leaverequest_state" />
</android.support.constraint.ConstraintLayout>
