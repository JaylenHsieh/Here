<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.NoTitle.SplashScreen">
        <item name="android:windowBackground">@drawable/img_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LessonTitle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ALessonValue">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccountSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="sectionType">header</item>
    </style>
    
    <style name="FunctionImage">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="FunctionName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="FunctionNew">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:src">@drawable/ic_new</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="FunctionLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
