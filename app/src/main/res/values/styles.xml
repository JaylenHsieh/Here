<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.NoTitle.SplashScreen">
        <item name="android:windowBackground">@drawable/img_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LessonTitle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ALessonValue">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
